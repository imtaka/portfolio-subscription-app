<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-danger", method: :delete %>
        </li>
        <li class="nav-item">
          <%= link_to '新規投稿', new_post_path, class: "btn btn-success" %>
        </li>
        <li class="nav-item">
          <%= link_to 'プロフィール変更', edit_user_registration_path, class: "btn btn-success" %>
        </li>
        <li class="nav-item">
          <%= link_to 'プロフィール詳細', users_detail_path, class: "btn btn-success" %>
        </li>
        <li class="nav-item">
        Signed in as <%= "#{current_user.email}" %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %></li>
        <li>
        <li>
          <%= link_to "サインイン", new_user_session_path, class: "btn btn-success" %>
        </li>
    <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
