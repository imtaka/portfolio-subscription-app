<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-8 post-main">

        <div class="subuscripition-post">
            <% if flash[:notice] %>
                <div class="alert alert-primary"><%= flash[:notice] %></div>
            <% end %>
            
            <% if @post.post_image.attached? %>
              <%= image_tag @post.post_image.variant(resize: "450x450") %>
            <% end %>

            <hr>

            <h1 class="post-title"><%= @post.subscription_name %></h1>
            
            <hr>
            <p>新規投稿日</p>
            <p class="blog-post-meta"><%= @post.created_at.to_s(:datetime_jp) %></p>

            <hr>
            <p>詳細</p>
            <p><%= simple_format(@post.description) %></p>

            <hr>

            <p>月額</p>
            <p><%= @post.monthly_price %></p>

            <hr>

            <p>試用期間</p>

            <% if @post.trial_term == 1 %>
                <p><%= 'あり'%></p>
            <% else %>
                <p><%= 'なし' %></p>
            <% end %>

            <hr>

            <p>ホームページアドレス</p>
            <p><%= @post.url %></p>

            <hr>
            <p>
  <strong>Tag:</strong>
  <% @post.tags.each do |tag| %>
    <span class="badge badge-primary"><%= tag.tagname %></span>
  <% end %>
</p>
<hr>

<%= render "likes/like", post: @post %>
<hr>
<%= form_for [@post, @comment ], :html => {class: "form-horizontal", role: "form"} do |f| %>
  <div class='form-group'>
    <div class='control-label col-md-2'>
      <%= f.label :body, 'New Comment' %>
    </div>
    <div class='col-md-10'>
      <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Your comment' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit "Add Comment", class: 'btn btn-primary btn-lg pull-right' %>
    </div>
  </div>
<% end %>
<header>
    <h2>Comments</h2>
  </header>
</div>
<div class="col-md-8">
    <% if @post.comments.any? %>

    <% persisted_comments(@comments).each do |comment| %>
      <div class="comment-body">
        <%= comment.body %>
      </div>
      <div class="comment-time">
        <%= "#{time_ago_in_words(comment.created_at || Time.now)} ago" %>
        ago by <%= comment.user.email %>
      </div>
      <% if user_signed_in? && current_user == comment.post.user %>
      <%= link_to 'コメント削除', [comment.post, comment],
      method: :delete, data: { confirm: '削除しますか？' } %>
    <% end %>
    <% end %>
  <% else %>
    There are no comments to show.
  <% end %>
</div>
        <nav class="blog-pagination">
            <%= link_to '編集', edit_post_path(@post), class: 'btn btn-warning text-white'%>
            <%= link_to 'トップ画面へもどる', posts_path, class: 'btn btn-dark text-white'%>
        </nav>
    </div>




        <aside class="col-md-4 blog-sidebar">
        <div class="p-4 mb-3 bg-light rounded">
            <h4 class="font-italic">SNSボタン</h4>
            <ul>
              <a style="color: Dodgerblue;" href="https://www.facebook.com/sharer/sharer.php?url=<%= request.url %>" rel="nofollow" target="_blank"><i class="fab fa-facebook fa-3x"></i></a>
　　　　　　  <a style="color: Dodgerblue;" href="http://twitter.com/share?text=<%= request.url %>&url=<?php the_permalink(); ?>" rel="nofollow" target="_blank"><i class="fab fa-twitter fa-3x"></i></a>
              <a style="color: Lightgreen;" href="https://social-plugins.line.me/lineit/share?url={<%= request.url %>}" rel="nofollow" target="_blank"><i class="fab fa-line fa-3x"></i></a>
            </ul>
        </div>

        <div class="p-4">
            <h4 class="font-italic"></h4>
            <ol class="list-unstyled mb-0">
            <li><a href="#"></a></li>
            </ol>
        </div>

        <div class="p-4">
            <h4 class="font-italic"></h4>
            <ol class="list-unstyled">
            <li><a href="#"></a></li>
            </ol>
        </div>
        </aside>
    </div>
</div>
