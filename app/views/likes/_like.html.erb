<% if current_user.already_liked?(@post) %>
  <%= link_to image_tag("icon_red_heart.png"), post_like_path(@post), method: :delete, remote: true %>
<% else %>
  <%= link_to image_tag("icon_heart.png"), post_likes_path(@post), method: :post, remote: true %>
<% end %>

<h5>いいね件数: <%= @post.likes.count %></h5>

<h5>いいねしたユーザー</h5>
  <% @post.liked_users.each do |user| %>
    <h6><%= user.username %></h6>
  <% end %>