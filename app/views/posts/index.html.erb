<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Subscription name</th>
      <th>Description</th>
      <th>Monthly price</th>
      <th>Trial term</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td>
        <% if post.post_image.attached? %>
          <%= image_tag post.post_image.variant(resize: "30x30")%>
        <% end %></td>
        <td><%= post.subscription_name %></td>
        <td><%= post.description %></td>
        <td><%= post.monthly_price %></td>
        <td><%= post.trial_term %></td>
        <td><%= post.url %></td>
        <td>(<%= post.liked_users.count %>)</td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', post %></td>
        <% end %>
        <% if user_signed_in? && current_user == post.user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
    
    </tbody>
    </table>
  <%= paginate @posts %>

<br>
